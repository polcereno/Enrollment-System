<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EnrollmentSystem"
        tools:targetApi="31">
        <activity
            android:name=".student_ui.student_profile.StudentProfileActivity"
            android:exported="false" />
        <activity
            android:name=".student_ui.statement_of_accounts.StatementsOfAccountsActivity"
            android:exported="false" />
        <activity
            android:name=".student_ui.school_calendar.SchoolCalendarActivity"
            android:exported="false" />
        <activity
            android:name=".student_ui.enrolled_subjects.EnrolledSubjectsActivity"
            android:exported="false" />
        <activity
            android:name=".student_ui.due_amount.DueAmountActivity"
            android:exported="false" />
        <activity
            android:name=".student_ui.curriculum_evaluation.CurriculumEvaluationActivity"
            android:exported="false" />
        <activity
            android:name=".student_ui.change_password.ChangePasswordActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.EnrollmentSystem.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>