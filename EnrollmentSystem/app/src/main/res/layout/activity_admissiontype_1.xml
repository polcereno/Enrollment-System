        android:textColor="@color/white"
        android:textSize="25sp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginLeft="20mm"
        android:layout_marginTop="-50dp"/>

    <TextView
        android:layout_width="50dp"
